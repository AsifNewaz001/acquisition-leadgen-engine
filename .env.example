# Application Settings
PROJECT_NAME=Acquisition Lead Generation Engine
API_VERSION=v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/leadgen

# Security
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
# Set to true to allow all origins (for ngrok demos - NOT for production!)
CORS_ALLOW_ALL=false

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# CRM Integrations
# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key-here

# Salesforce
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

# Email Services
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Lead Scoring
LEAD_SCORE_THRESHOLD=70

# Data Enrichment Services
CLEARBIT_API_KEY=your-clearbit-api-key-here
HUNTER_API_KEY=your-hunter-api-key-here

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Environment
ENVIRONMENT=development
DEBUG=true
